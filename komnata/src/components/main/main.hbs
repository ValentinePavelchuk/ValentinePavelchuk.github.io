<section class="main white-txt parallax" id="main">
    <div class="main-bg">
        <img src="{{bgSrc}}" alt="main background" class="main-bg__item">
    </div>
    <div class="container">
        <div class="main-content">
            <h1 class="heading main__title anim-elem anim-left">{{title}}</h1>
            <p class="txt main__descr anim-elem anim-left">{{descr}}</p>
            {{> button class="main__btn open-modal anim-elem anim-up" text="Забронировать" modalName="booking-modal"}}
        </div>
    </div>
</section>